
nobase_data_DATA = plof_include/std.psl plof_include/cnfi.psl plof_include/nonfi.psl

PUL_PSL_SOURCE=base.psl core/pul/pul_g.plof core/pul/pul.plof core/pul/object_g.plof

STD_PSL_SOURCE=object.plof \
               include_g.plof \
               exceptions.plof \
               boolean_g.plof boolean.plof \
               conditionals.plof \
               dynamicTypes_g.plof dynamicTypes.plof \
               number_g.plof number.plof \
               string_g.plof string.plof \
               collection_g.plof collection.plof \
	       io.plof \
               versions.plof \
               nfi.plof

CNFI_PSL_SOURCE=cnfi.plof cio.plof

NONFI_PSL_SOURCE=nonfi.plof

pul.psl: $(PUL_PSL_SOURCE)
	$(PLOF) -N $(PLOF_FLAGS) $(PUL_PSL_SOURCE) -o pul.psl

puldebug.psl: $(PUL_PSL_SOURCE)
	$(PLOF) -N --debug $(PLOF_FLAGS) $(PUL_PSL_SOURCE) -o puldebug.psl

std.psl: pul.psl $(STD_PSL_SOURCE)
	$(PLOF) -N $(PLOF_FLAGS) pul.psl $(STD_PSL_SOURCE) -o std.psl

debug/std.psl: pul.psl $(STD_PSL_SOURCE)
	$(PLOF) -N --debug $(PLOF_FLAGS) pul.psl $(STD_PSL_SOURCE) -o std.psl

debug/stddebug.psl: puldebug.psl $(STD_PSL_SOURCE)
	$(PLOF) -N --debug $(PLOF_FLAGS) puldebug.psl $(STD_PSL_SOURCE) -o debug/stddebug.psl

cnfi.psl: $(CNFI_PSL_SOURCE) std.psl
	$(PLOF) $(PLOF_FLAGS) $(CNFI_PSL_SOURCE) -o cnfi.psl

debug/cnfi.psl: $(CNFI_PSL_SOURCE) debug/std.psl
	$(PLOF) --debug $(PLOF_FLAGS) $(CNFI_PSL_SOURCE) -o debug/cnfi.psl

nonfi.psl: $(NONFI_PSL_SOURCE) std.psl
	$(PLOF) $(PLOF_FLAGS) $(NONFI_PSL_SOURCE) -o nonfi.psl

debug/nonfi.psl: $(NONFI_PSL_SOURCE) std.psl $(PLOF_REQ)
	$(PLOF) --debug $(PLOF_FLAGS) $(NONFI_PSL_SOURCE) -o debug/nonfi.psl
